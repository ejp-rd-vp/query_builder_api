{
    "$schema": "http://json-schema.org/draft-07/schema",
    "description": "A dataset available in the beacon",
    "$comment": "EJPRD Resource QB Beacon Version",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique identifier of the resource",
            "examples": [
                "ds01010101"
            ]
        },
        "name": {
            "type": "string",
            "description": "Name of the dataset/resource",
            "examples": [
                "Bank of muscular disease"
            ]
        },
        "type": {
            "type": "string",
            "description": "The type of resource among the allowed values",
            "enum": [
                "BiobankDataset",
                "PatientRegistryDataset"
            ]
        },
        "description": {
            "type": "string",
            "description": "Description of the dataset"
        },
        "createDateTime": {
            "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-v2-Models/main/BEACON-V2-Model/common/commonDefinitions.json#/definitions/Timestamp",
            "description": "The time the dataset was created (ISO 8601 format)",
            "examples": [
                "2017-01-17T20:33:40Z"
            ]
        },
        "updateDateTime": {
            "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-v2-Models/main/BEACON-V2-Model/common/commonDefinitions.json#/definitions/Timestamp",
            "description": "The time the dataset was updated in (ISO 8601 format)",
            "examples": [
                "2017-01-17T20:33:40Z"
            ]
        },
        "version": {
            "type": "string",
            "description": "Version of the dataset",
            "examples": [
                "v1.1"
            ]
        },
        "externalUrl": {
            "type": "string",
            "format": "uri",
            "description": "URL to an external system providing more dataset information (RFC 3986 format).",
            "examples": [
                "http://example.org/wiki/Main_Page"
            ]
        },
        "info": {
            "$ref": "https://raw.githubusercontent.com/ga4gh-beacon/beacon-framework-v2/main/common/beaconCommonComponents.json#/definitions/Info"
        }
    },
    "required": [
        "id",
        "name"
    ],
    "additionalProperties": true
}