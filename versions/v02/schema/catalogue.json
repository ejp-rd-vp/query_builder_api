{
  "$id": "catalogue.json",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Rare disease resource catalogue.",
  "description": "Schema to describe a resource that catalogues resources.",
  "required": [
    "@id",
    "@type"
  ],
  "properties": {
    "@id": {
      "description": "A primary identifier for the catalogue.",
      "type": "string",
      "example": "http://www.orpha.net"
    },
    "@type": {
      "description": "The primary type for this catalogue.",
      "type": "string",
      "example": "CatalogOfRegistries",
      "enum": [
          "CatalogOfRegistries"
      ]
    },
    "name": {
      "description": "A name for the catalogue.",
      "type": "string",
    },
    "description": {
      "description": "A description for the catalogue.",
      "type": "string",
    },
    "homepage": {
      "description": "The homepage of the catalogue.",
      "type": "string",
      "example": "http://www.orpha.net"
    },
    "datasets": {
      "type": "array",
      "descripton": "Resource(s) served by the API.",
      "items": {
		"$ref": "resource.json"
      }
    },
    "organisation": {
	  "$ref": "organisation.json"
    },
	"apiVersion": {
      "type": "string",
      "description": "Version of the API the catalogue is providing.",
      "example": "v0.1"
	},
	"createDateTime": {
      "type": "string",
      "description": "The time the API was created (ISO 8601 format).",
      "example": "2012-07-19 or 2017-01-17T20:33:40Z"
	},
    "updateDateTime": {
      "type": "string",
      "description": "The time the API was last updated (ISO 8601 format).",
      "example": "2012-07-19 or 2017-01-17T20:33:40Z"
	},
    "sampleRequests": {
      "description": "Examples of interesting requests to the catalogue API.",
      "type": "array",
      "items": {
        "type": "string",
	  }
	}
  }
}
